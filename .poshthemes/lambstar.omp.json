{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#FFCC00",
          "style": "plain",
          "template": "\u256d\u2500 ",
          "type": "text"
        },
        {
          "foreground": "#E06C75",
          "style": "plain",
          "template": "root <#ffffff>in</> ",
          "type": "root"
        },
        {
          "foreground": "#55B9C4",
          "type": "os",
          "style": "plain",
          "template": "{{ .Icon }} \ue285 "
        },
        {
          "foreground": "#55B9C4",
          "properties": {
            "folder_icon": "\u2026",
            "folder_separator_icon": " \ue285 ",
            "home_icon": "\uf7db",
            "style": "agnoster_short",
            "max_depth": 3
          },
          "style": "plain",
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "#C678DD",
          "properties": {
            "fetch_status": false
          },
          "style": "plain",
          "template": "<#ffffff>on</> {{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "type": "git"
        },
        {
          "foreground": "#ffffff",
          "properties": {
            "style": "austin",
            "threshold": 500
          },
          "style": "plain",
          "template": "{{ .FormattedMs }} ",
          "type": "executiontime"
        },
        {
          "foreground": "#98C379",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#C94A16{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "{{ if gt .Code 0 }}\uf00d {{ .Code }}{{ else }}\uf42e{{ end }} ",
          "type": "exit"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#FFCC00",
          "style": "plain",
          "template": "\u2570\u2500 \ufb26 ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 2
}
